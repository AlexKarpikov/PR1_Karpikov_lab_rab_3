<script src="http://code.jquery.com/jquery-latest.js"></script>
<script>	 		
	$(document).ready(function () {
		$("button").click(function () {
		var i=1;
		do{
		$(".p2").fadeToggle(2000);
		i++;
		if(i%2==0){
			$(".p1").fadeToggle(2000);}
		}
		while(i<2000)
		$(".p1").hide();
		});
});
</script>
</head>
