<script src="http://code.jquery.com/jquery-latest.js"> 
</script>  
<script>
      $(document).ready(function () {
         $("[align*='center']").dblclick(function () {
		 $(this).hide();
	});
         $("button").dblclick(function () {
		$("[align*='center']").show();
	});
	
     });

</script> 
</head> 
