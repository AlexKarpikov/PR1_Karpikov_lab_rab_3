<script> 
    $(document).ready(function () { 
        $("button").click(function () { 
		$("#div1[align|='right'").delay(50).animate({left: '-40px' });
                $("#div2").text("Параграф 1");
                $("#div3[align|='right'").delay(50).animate({left: '-40px' });
                $("#div4").text("Параграф 3");
                $("#div5[align|='right'").delay(50).animate({left: '-40px' });     
                $("#div6").text("Параграф 5");
	});     
    }); 
</script>  
</head> 
